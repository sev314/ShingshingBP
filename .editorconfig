# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = UTF-8
indent_style = tab
indent_size = 4
end_of_line = crlf
trim_trailing_whitespace = false
insert_final_newline = false

[.gitignore]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{MD,md}]
indent_style = tab
indent_size = 3
trim_trailing_whitespace = true
insert_final_newline = true

[CNAME]
trim_trailing_whitespace = true
insert_final_newline = true

[LICENSE]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{TXT,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.bat]
charset = CP949
trim_trailing_whitespace = true
insert_final_newline = true

[*.{TOML,toml}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{YML,yml,yaml}]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# EOF